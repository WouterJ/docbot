{
    "name": "wouterj/docbot",
    "description": "A linter tool for documentations.",
    "license": "BSD",

    "require": {
        "php": ">=5.4",
        "symfony/console": "~2.3",
        "symfony/finder": "~2.3",
        "gnugat/redaktilo": "~1.7",
        "symfony/validator": "~2.7",
        "symfony/dependency-injection": "~2.5",
        "symfony/config": "~2.3",
        "sebastian/diff": "^1.3",
        "sebastian/git": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.7",
        "symfony/phpunit-bridge": "^2.7"
    },

    "bin": ["bin/docbot"],

    "autoload": {
        "psr-4": {"Docbot\\": "src"}
    },

    "extra": {
        "branch-alias": {
            "dev-master": "0.2.x-dev"
        }
    }
}
