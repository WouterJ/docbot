{
    "name": "wouterj/docbot",
    "description": "A linter tool for documentations.",
    "license": "BSD",

    "require": {
        "symfony/console": "~2.3",
        "symfony/finder": "~2.3",
        "gnugat/redaktilo": "~1.7",
        "zendframework/zend-eventmanager": "~2.3",
        "symfony/dependency-injection": "~2.5",
        "symfony/config": "~2.3"
    },
    "require-dev": {
        "phpspec/phpspec": "2.1.*",
        "phpspec/prophecy": "1.3.*"
    },

    "bin": ["bin/docbot"],

    "autoload": {
        "psr-4": {"Docbot\\": "src"}
    },
    "autoload-dev": {
        "psr-0": {"spec\\": "."}
    }
}
